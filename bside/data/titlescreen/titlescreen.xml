<!DOCTYPE codename-titlestate >
<titlestate>
    <sprites folder="menus/titlescreen">
        <sprite name="bg" sprite="titleBG" x="0" y="0" />

        <sprite name="logo" sprite="logo" x="50" y="50" scale="0.75" updateHitbox="true"/>
        <sprite name="gf" sprite="gf" x="425" y="100">
            <anim name="idle" anim="boppy"/>
        </sprite>

        <titleEnter sprite="titleEnter" x="-150" y="-100" />
    </sprites>

    <intro length="16">
        <text beat="1">
            <line text="ninjamuffin99" />
            <line text="phantomArcade" />
            <line text="kawaisprite" />
            <line text="evilsk8er" />
        </text>
    
        <text beat="3">
            <line text="ninjamuffin99" />
            <line text="phantomArcade" />
            <line text="kawaisprite" />
            <line text="evilsk8er" />
            <line text="presents" />
        </text>
        
        <text beat="4" /> <!-- clears the screen !-->

        <text beat="5">
            <line text="In association" />
            <line text="with" />
        </text>

        <text beat="7">
            <line text="In association" />
            <line text="with" />
            <line text="Newgrounds" />
            <sprite path="menus/titlescreen/newgrounds_logo" scale="0.8"/>
        </text>

        <text beat="8" /> <!-- clears the screen !-->

        <text beat="9">
            <introtext line="1" />
        </text>

        <text beat="11">
            <introtext line="1" />
            <introtext line="2" />
        </text>

        <text beat="12"/>

        <text beat="13">
            <line text="Friday" />
        </text>

        <text beat="14">
            <line text="Friday" />
            <line text="Night" />
        </text>
        
        <text beat="15">
            <line text="Friday" />
            <line text="Night" />
            <line text="Funkin'" />
        </text>
    </intro>
</titlestate>